@model CaterManagementSystem.Areas.Admin.ViewModels.DashboardStatsViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // Layout yolu düzgündür
}

<div class="main-panel">
    <div class="content-wrapper">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="row">
            <!-- Card: Total Users -->
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mb-0">Cəmi İstifadəçilər</h4>
                                <p class="card-text fs-30 lh-1 fw-bold">@Model.TotalUsers</p>
                            </div>
                            <i class="mdi mdi-account-multiple icon-lg"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card: Active Services -->
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mb-0">Aktiv Xidmətlər</h4>
                                <p class="card-text fs-30 lh-1 fw-bold">@Model.ActiveServicesCount</p>
                            </div>
                            <i class="mdi mdi-briefcase-check icon-lg"></i> <!-- İkon dəyişdirildi -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card: Our Chefs -->
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mb-0">Bizim Aşpazlar</h4>
                                <p class="card-text fs-30 lh-1 fw-bold">@Model.TotalChefs</p>
                            </div>
                            <i class="mdi mdi-chef-hat icon-lg"></i> <!-- İkon dəyişdirildi -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card: Events -->
            <div class="col-md-6 col-lg-3 grid-margin stretch-card">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="card-title mb-0">Tədbirlər</h4>
                                <p class="card-text fs-30 lh-1 fw-bold">@Model.TotalEvents</p>
                            </div>
                            <i class="mdi mdi-calendar-multiple-check icon-lg"></i> <!-- İkon dəyişdirildi -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chart Row -->
        <div class="row">
           

            <!-- Table Sample -->
            <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Son Qeydiyyatlar (Nümunə)</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Ad</th>
                                        <th>Tarix</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Bu hissəni də dinamik etmək üçün Controller-dən məlumat göndərməlisiniz *@
                                    <tr>
                                        <td>Aylin M.</td>
                                        <td>@DateTime.Now.AddDays(-1).ToString("yyyy-MM-dd")</td>
                                    </tr>
                                    <tr>
                                        <td>Elvin S.</td>
                                        <td>@DateTime.Now.AddDays(-2).ToString("yyyy-MM-dd")</td>
                                    </tr>
                                    <tr>
                                        <td>Kamran Z.</td>
                                        <td>@DateTime.Now.AddDays(-3).ToString("yyyy-MM-dd")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

