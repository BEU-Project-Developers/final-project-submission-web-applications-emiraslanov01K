@model CaterManagementSystem.Models.Profession
@{
    ViewData["Title"] = "Peşəni Sil";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-danger">@ViewData["Title"]</h4>
                        <hr />
                        @if (Model.TeamMembers != null && Model.TeamMembers.Any())
                        {
                            <div class="alert alert-danger">
                                <strong>Diqqət!</strong> Bu peşəyə (<strong>@Model.Name</strong>) bağlı @Model.TeamMembers.Count komanda üzvü var.
                                Bu peşəni silmək üçün əvvəlcə bu komanda üzvlərini silməli və ya peşələrini dəyişməlisiniz.
                            </div>
                            <a asp-action="Index" class="btn btn-secondary mt-3">Siyahıya Qayıt</a>
                        }
                        else
                        {
                            <h5 class="text-danger">Bu peşəni silmək istədiyinizə əminsinizmi?</h5>
                            <dl class="row mt-3">
                                <dt class="col-sm-3">ID:</dt>
                                <dd class="col-sm-9">@Model.Id</dd>

                                <dt class="col-sm-3">Peşə Adı:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                            </dl>
                            <form asp-action="Delete" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger me-2">Bəli, Sil</button>
                                <a asp-action="Index" class="btn btn-light">Xeyr, İmtina Et</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>