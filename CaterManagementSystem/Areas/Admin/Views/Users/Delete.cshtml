@model CaterManagementSystem.Areas.Admin.ViewModels.UserViewModel
@{
    ViewData["Title"] = "İstifadəçini Sil";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-danger">@ViewData["Title"]</h4>
                        <hr />
                        <h5 class="text-danger">Bu istifadəçini silmək istədiyinizə əminsinizmi?</h5>
                        <p class="text-muted">Bu əməliyyat istifadəçinin bütün məlumatlarını və rezervlərini (əgər varsa və əlaqəlidirsə) siləcək və geri qaytarıla bilməz.</p>
                        <div>
                            <dl class="row mt-3">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">İstifadəçi Adı:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                                <dt class="col-sm-4">Tam Ad:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                                <dt class="col-sm-4">E-poçt:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                                <dt class="col-sm-4">Rollar:</dt>
                                <dd class="col-sm-8">@string.Join(", ", Model.Roles)</dd>
                            </dl>

                            <form asp-action="Delete" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger me-2">Bəli, Sil</button>
                                <a asp-action="Index" class="btn btn-secondary">Xeyr, İmtina Et</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>