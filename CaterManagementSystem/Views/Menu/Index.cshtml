@model IEnumerable<CaterManagementSystem.Models.MenuItem>
@{
    ViewData["Title"] = "Menyu";
    // For data-wow-delay sequencing
    var delayCounter = 0;
    var delayIncrement = 0.1;
}

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control bg-transparent p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->
<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Menyu</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
            <li class="breadcrumb-item text-dark active" aria-current="page">Mövcud Yeməklər</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Menu Start -->
<div class="container-fluid menu bg-light py-6 my-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Menyumuz</small>
            <h1 class="display-5 mb-5">Aşpazın Xüsusi Təklifləri</h1>
        </div>
        <div class="tab-class text-center">
            @*
            Əgər menyu kateqoriyaları (tabları) olacaqsa, buraya naviqasiya əlavə oluna bilər:
            <ul class="nav nav-pills d-inline-flex justify-content-center mb-5 wow bounceInUp" data-wow-delay="0.1s">
                <li class="nav-item">
                    <a class="d-flex mx-2 py-2 border border-primary bg-light rounded-pill active" data-bs-toggle="pill" href="#main-menu">
                        <span class="text-dark" style="width: 150px;">Main Menu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex mx-2 py-2 border border-primary bg-light rounded-pill" data-bs-toggle="pill" href="#starters">
                        <span class="text-dark" style="width: 150px;">Starters</span>
                    </a>
                </li>
                 ... digər tablar ...
            </ul>
            *@
            <div class="tab-content">
                <div id="main-menu" class="tab-pane fade show p-0 active">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row g-4">
                            @foreach (var item in Model)
                            {
                                // Reset delay counter if it gets too high for variety, e.g., after 8 items (0.1s to 0.8s)
                                if (delayCounter >= 8)
                                {
                                    delayCounter = 0;
                                }
                                var currentDelay = (delayCounter * delayIncrement) + delayIncrement; // Starts from 0.1s

                                <div class="col-lg-6 wow bounceInUp" data-wow-delay="@(currentDelay.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture))s">
                                    <div class="menu-item d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img class="flex-shrink-0 img-fluid rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" src="~/@item.ImagePath" alt="@item.Name">
                                        }
                                        else
                                        {
                                            <img class="flex-shrink-0 img-fluid rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" src="~/img/menu/default-food.png" alt="Default food item"> @* Ehtiyat şəkil *@
                                        }
                                        <div class="w-100 d-flex flex-column text-start ps-4">
                                            <div class="d-flex justify-content-between border-bottom border-primary pb-2 mb-2">
                                                <h4>@item.Name</h4>
                                                <h4 class="text-primary">$@item.Price.ToString("N2")</h4> @* N2 formatı 12.00 kimi göstərəcək *@
                                            </div>
                                            <p class="mb-0">@item.Description</p>
                                        </div>
                                    </div>
                                </div>
                                delayCounter++;
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p>Menyuda hazırda heç bir yemək mövcud deyil. Zəhmət olmasa daha sonra yenidən yoxlayın.</p>
                        </div>
                    }
                </div>
                @*
                Digər tab-pane-lər (əgər menyu kateqoriyaları əlavə olunarsa):
                <div id="starters" class="tab-pane fade p-0">
                    <!-- Starters will be listed here -->
                </div>
                ...
                *@
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->