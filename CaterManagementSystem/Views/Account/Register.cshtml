@model CaterManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <!-- ... (sizin modal kodunuz) ... -->
</div>
<!-- Modal Search End -->
<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Sign Up</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item text-dark" aria-current="page">Join us to access all futures</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Signup Section Start -->
<div class="container-fluid contact py-6">
    <div class="container">
        <div class="row g-0">
            <div class="col-1">
                <img src="~/img/background-site.jpg" class="img-fluid h-100 w-100 rounded-start side-image" alt="">
            </div>
            <div class="col-10">
                <div class="border-bottom border-top border-primary bg-light py-5 px-4">
                    <div class="text-center">
                        <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Sign Up</small>
                        <h1 class="display-5 mb-5">Create Your Account</h1>
                    </div>
                    <div class="row g-4 form">
                        <div class="col-md-6 mx-auto">
                            <form asp-action="Register" asp-controller="Account" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="mb-3">
                                    <input asp-for="UserName" class="form-control border-primary p-2" placeholder="Username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="Email" class="form-control border-primary p-2" placeholder="Your Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="Password" class="form-control border-primary p-2" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control border-primary p-2" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn-like-link">Sign Up</button>
                                </div>
                                <div class="text-center mt-3">
                                    <div class="sign-icon">
                                        <div class="acc-not">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-1">
                <img src="~/img/background-site.jpg" class="img-fluid h-100 w-100 rounded-end side-image" alt="">
            </div>
        </div>
    </div>
</div>
<!-- Signup Section End -->

<style>
    .btn-like-link {
        /* ... (sizin CSS kodunuz) ... */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}