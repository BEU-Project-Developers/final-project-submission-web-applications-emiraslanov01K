@model CaterManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<!-- ... (digər HTML kodlarınız) ... -->
<div class="col-10">
    <div class="border-bottom border-top border-primary bg-light py-5 px-4">
        <div class="text-center">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Sign Up</small>
            <h1 class="display-5 mb-5">Create Your Account</h1>
        </div>
        <div class="row g-4 form">
            <div class="col-md-6 mx-auto">
                <form asp-action="Register" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> <!-- ModelOnly olması yaxşıdır, çünki fərdi xətalar aşağıda göstərilir -->

                    <div class="mb-3">
                        <input asp-for="UserName" class="form-control border-primary p-2" placeholder="Username">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <!--  FullName ÜÇÜN SAHƏ ƏLAVƏ EDİLDİ -->
                    <div class="mb-3">
                        <input asp-for="FullName" class="form-control border-primary p-2" placeholder="Tam Adınız">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <!-- FullName SAHƏSİ BİTDİ -->
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control border-primary p-2" placeholder="Your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" class="form-control border-primary p-2" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" class="form-control border-primary p-2" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn-like-link">Sign Up</button>
                    </div>
                    <div class="text-center mt-3">
                        <div class="sign-icon">
                            <div class="acc-not">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
