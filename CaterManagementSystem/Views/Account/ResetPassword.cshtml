@model CaterManagementSystem.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifrəni Yenilə";
}
<!-- Hero Start (Sizin şablonunuza uyğunlaşdırın) -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center">
        <h1 class="display-1 mb-4">@ViewData["Title"]</h1>
        <p>Yeni şifrənizi daxil edin.</p>
    </div>
</div>
<!-- Hero End -->

<div class="container-fluid contact py-6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
                }
                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control border-primary p-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control border-primary p-2" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 px-4">Şifrəni Yenilə</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}