@model CaterManagementSystem.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifrəni Unutdum";
}

<!-- Hero Start (Sizin şablonunuza uyğunlaşdırın) -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center">
        <h1 class="display-1 mb-4">@ViewData["Title"]</h1>
        <p>Şifrənizi sıfırlamaq üçün e-poçt ünvanınızı daxil edin.</p>
    </div>
</div>
<!-- Hero End -->

<div class="container-fluid contact py-6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info text-center">@TempData["InfoMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
                }
                <form asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control border-primary p-2" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 px-4">Sıfırlama Linki Göndər</button>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="Login" asp-controller="Account">Daxil Olma Səhifəsinə Qayıt</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}