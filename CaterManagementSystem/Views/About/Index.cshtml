@model CaterManagementSystem.ViewModels.AboutPageViewModel
@{
    ViewData["Title"] = Model?.AboutSectionData?.TitleTag ?? "Haqqımızda";
}

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control bg-transparent p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->
<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Haqqımızda</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
            <li class="breadcrumb-item text-dark active" aria-current="page">Haqqımızda</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- About Start -->
<div class="container-fluid py-6">
    <div class="container">
        @if (Model?.AboutSectionData != null)
        {
            var about = Model.AboutSectionData; // Qısa adlandırma üçün
            <div class="row g-5 align-items-center">
                <div class="col-lg-5 wow bounceInUp" data-wow-delay="0.1s">
                    @if (!string.IsNullOrEmpty(about.ImagePath))
                    {
                        <img src="~/@about.ImagePath" class="img-fluid rounded" alt="Haqqımızda Şəkli">
                    }
                    else
                    {
                        <img src="~/img/default-about.jpg" class="img-fluid rounded" alt="Haqqımızda Standard Şəkil">
                    }
                </div>
                <div class="col-lg-7 wow bounceInUp" data-wow-delay="0.3s">
                    @if (!string.IsNullOrEmpty(about.TitleTag))
                    {
                        <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">@about.TitleTag</small>
                    }
                    @if (!string.IsNullOrEmpty(about.MainTitle))
                    {
                        <h1 class="display-5 mb-4">@about.MainTitle</h1>
                    }
                    @if (!string.IsNullOrEmpty(about.Description))
                    {
                        <p class="mb-4">@Html.Raw(about.Description.Replace("\n", "<br />"))</p>
                    }

                    <div class="row g-4 text-dark mb-5">
                        @if (!string.IsNullOrEmpty(about.Feature1Text))
                        {
                            <div class="col-sm-6">
                                <i class="fas fa-share text-primary me-2"></i>@about.Feature1Text
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(about.Feature2Text))
                        {
                            <div class="col-sm-6">
                                <i class="fas fa-share text-primary me-2"></i>@about.Feature2Text
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(about.Feature3Text))
                        {
                            <div class="col-sm-6">
                                <i class="fas fa-share text-primary me-2"></i>@about.Feature3Text
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(about.Feature4Text))
                        {
                            <div class="col-sm-6">
                                <i class="fas fa-share text-primary me-2"></i>@about.Feature4Text
                            </div>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(about.ButtonText) && !string.IsNullOrEmpty(about.ButtonUrl))
                    {
                        <a href="@about.ButtonUrl" class="btn btn-primary py-3 px-5 rounded-pill">@about.ButtonText<i class="fas fa-arrow-right ps-2"></i></a>
                    }
                    else if (!string.IsNullOrEmpty(about.ButtonText))
                    {
                        <a href="#" class="btn btn-primary py-3 px-5 rounded-pill">@about.ButtonText<i class="fas fa-arrow-right ps-2"></i></a>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center">
                <p>Haqqımızda məlumatları hazırda mövcud deyil.</p>
            </div>
        }
    </div>
</div>
<!-- About End -->
<!-- Fact Start-->
<div class="container-fluid faqt py-6">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7">
                <div class="row g-4">
                    <div class="col-sm-4 wow bounceInUp" data-wow-delay="0.3s">
                        <div class="faqt-item bg-primary rounded p-4 text-center">
                            <i class="fas fa-users fa-4x mb-4 text-white"></i>
                            <h1 class="display-4 fw-bold" data-toggle="counter-up">@Model.HappyCustomersCount</h1>
                            <p class="text-dark text-uppercase fw-bold mb-0">Məmnun Müştərilər</p>
                        </div>
                    </div>
                    <div class="col-sm-4 wow bounceInUp" data-wow-delay="0.5s">
                        <div class="faqt-item bg-primary rounded p-4 text-center">
                            <i class="fas fa-users-cog fa-4x mb-4 text-white"></i>
                            <h1 class="display-4 fw-bold" data-toggle="counter-up">@Model.ExpertChefsCount</h1>
                            <p class="text-dark text-uppercase fw-bold mb-0">Peşəkar Aşpazlar</p>
                        </div>
                    </div>
                    <div class="col-sm-4 wow bounceInUp" data-wow-delay="0.7s">
                        <div class="faqt-item bg-primary rounded p-4 text-center">
                            <i class="fas fa-check fa-4x mb-4 text-white"></i>
                            <h1 class="display-4 fw-bold" data-toggle="counter-up">@Model.EventsCompleteCount</h1>
                            <p class="text-dark text-uppercase fw-bold mb-0">Tamamlanmış Tədbirlər</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 wow bounceInUp" data-wow-delay="0.1s">
                <div class="video">
                    
                    <button type="button" class="btn btn-play" data-bs-toggle="modal" data-src="https://www.youtube.com/shorts/kQZXCpBONNM" data-bs-target="#videoModal">
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Video -->
<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Youtube Video</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="ratio ratio-16x9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/shorts/kQZXCpBONNM" id="video" allowfullscreen allowscriptaccess="always"
                            allow="autoplay"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fact End -->
@section Scripts {
    <script>
        // Video Modal üçün JavaScript
        var videoModal = document.getElementById('videoModal');
        if (videoModal) {
            videoModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var videoSrc = button.getAttribute('data-src');
                var iframe = videoModal.querySelector('#video');
                if (iframe) {
                    iframe.setAttribute('src', videoSrc + "?autoplay=1&modestbranding=1&showinfo=0");
                }
            });

            videoModal.addEventListener('hide.bs.modal', function (event) {
                var iframe = videoModal.querySelector('#video');
                if (iframe) {
                    iframe.setAttribute('src', '');
                }
            });
        }

        // Counter-Up üçün (jQuery və counterup.js tələb edir)
        // jQuery proyektinizdə olmalıdır (_Layout.cshtml-də)
        // counterup.js faylını da əlavə etməlisiniz
        // $(document).ready(function($) {
        //     $('[data-toggle="counter-up"]').counterUp({
        //         delay: 10, // ms
        //         time: 1000 // ms
        //     });
        // });
    </script>
}